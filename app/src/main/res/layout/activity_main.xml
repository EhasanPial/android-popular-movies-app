<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- SwipeRefreshLayout that is used whenever the user can refresh the contents of a view -->
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_movie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue_grey_dark" />

        </android.support.v4.widget.SwipeRefreshLayout>

        <!-- Only visible when there is no Internet connection -->
        <TextView
            android:id="@+id/tv_offline"
            style="@style/EmptyTextStyle"
            android:drawablePadding="@dimen/padding_activity"
            android:drawableTop="@drawable/wifi_off"
            android:text="@string/check_network"
            android:textAlignment="center"
            android:textColor="@color/color_offline" />

        <!-- Only visible when an error occurs -->
        <TextView
            android:id="@+id/tv_error"
            style="@style/EmptyTextStyle"
            android:textAlignment="center"
            android:drawablePadding="@dimen/padding_activity"
            android:textColor="@color/color_offline" />

        <!-- ProgressBar to show the user content is loading -->
        <ProgressBar
            android:id="@+id/pb_loading_indicator"
            android:layout_width="@dimen/size_loading_indicator"
            android:layout_height="@dimen/size_loading_indicator"
            android:layout_gravity="center"
            android:visibility="invisible" />

    </FrameLayout>
</layout>